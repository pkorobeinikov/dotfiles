export LC_ALL="en_US.UTF-8"

export PATH="~/bin:$PATH"
export PATH="~/bin/apache-ant/bin:$PATH"
export PATH="~/bin/gradle/bin:$PATH"

# Go
export GOROOT="$HOME/bin/go"
export PATH="$GOROOT/bin:$PATH"

# Android SDK
export PATH="$PATH:~/bin/android-sdk/tools"
export PATH="$PATH:~/bin/android-sdk/platform-tools"

# Composer
export PATH="$PATH:~/.composer/vendor/bin"

# Postgres
export PGHOST=localhost
export PGDATABASE=template1

# My own Postgresql binaries
export PATH="$HOME/Workspace/postgresql.org/build/bin:$PATH"

# Prefer virtualbox for Vagrant
export VAGRANT_DEFAULT_PROVIDER=virtualbox
