-- Tab completion in lowercase.
\set COMP_KEYWORD_CASE lower

-- Switch to expanded table format automatically.
\x auto

-- Prompt: user @ database conn_status backend_pid is_in_transaction
\set PROMPT1 '%n@%/%R%(%p)#%x '

\pset null 'Ã˜'

-- Use one histfile per each database
\set HISTFILE ~/.psql_history- :DBNAME @ :HOST

-- Do not log duplicates
\set HISTCONTROL ignoredups

-- Turn timing on.
\timing
