[user]
        name = Petr Korobeinikov
        email = pkorobeinikov@gmail.com
[core]
        autocrlf = input
        editor = vim
        filemode = true
        excludesfile = ~/.gitignore_global
[alias]
        this = !git init && git add . && git commit -m \"Initial commit.\"
        st = status
        ci = commit -v
        uncommit = reset --soft HEAD^
        co = checkout
        cm = checkout master
        br = branch
        f = fetch
        last = log -1
        l = log --oneline
        lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
        today = shortlog --since=midnight
        ms = merge --squash
        mm = merge master
        ds = diff --staged
        di = diff
        rh = reset --hard
        ri = rebase -i
        re = rebase
        pr = pull --rebase
        tags = tag --list
        unstage = reset HEAD --
        stashes = stash list
        sp = stash pop
        remotes = remote -v
[push]
        default = current
[rebase]
        autoStash = true
[color]
        ui = auto
[color "branch"]
        current = yellow reverse
        local = yellow
        remote = green
[color "status"]
        added = yellow
        changed = green
        untracked = cyan
[color "diff"]
        meta = yellow bold
        frag = magenta bold
        old = red
        new = green
[help]
        autocorrect = 1
[pager]
	diff = diff-so-fancy | less --tabs=1,5 -RFX
	show = diff-so-fancy | less --tabs=1,5 -RFX
