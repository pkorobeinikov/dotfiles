[user]
        name = Petr Korobeinikov
        email = pkorobeinikov@gmail.com
[core]
        autocrlf = input
        editor = vim
        filemode = true
        excludesfile = ~/.gitignore_global
[alias]
        st = status
        ci = commit -v
        co = checkout
        cm = checkout master
        br = branch
        last = log -1
        l = log --oneline
        lg = log --oneline --graph
        ms = merge --squash
        mm = merge master
        ds = diff --staged
        rh = reset --hard
[push]
        default = current
[color]
        ui = auto
[color "branch"]
        current = yellow reverse
        local = yellow
        remote = green
[color "status"]
        added = yellow
        changed = green
        untracked = cyan
[color "diff"]
        meta = yellow bold
        frag = magenta bold
        old = red
        new = green
[help]
        autocorrect = 1
